{
  "name": "gh-project-migrator",
  "version": "1.0.1",
  "description": "Application that helps you move your GitHub project boards between repositories and organizations.",
  "main": "dist/cli.js",
  "bin": {
    "gh-project-migrator": "dist/cli.js"
  },
  "dependencies": {
    "@octokit/graphql": "^4.5.7",
    "commander": "^6.2.0",
    "date-fns": "^2.16.1",
    "inquirer": "^7.3.3",
    "node-fetch": "^2.6.1",
    "open": "^7.3.0",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@octokit/types": "^2.16.2",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^25.2.3",
    "@types/node": "^13.13.31",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.16.0",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^25.5.4",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "build": "rimraf dist && tsc -b && copyfiles -Vu 1 src/graphql/**/* dist",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint src/**/*.ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postversion": "git push && git push --tags",
    "start": "node dist/cli.js",
    "build-start": "npm run build && npm start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint-fix",
      "npm run format",
      "npm run build"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/froi/gh-project-migrator.git"
  },
  "keywords": [
    "github",
    "projects",
    "migration"
  ],
  "author": "Froilan Irizarry Rivera",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/froi/gh-project-migrator/issues"
  },
  "homepage": "https://github.com/froi/gh-project-migrator#readme"
}
